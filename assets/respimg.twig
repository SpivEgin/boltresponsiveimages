
{% if widthDensity == 'w' %}
    <img sizes="{% for s in sizes %}{{ s }}{% if not loop.last  %},{% endif %}{% endfor %}"
         srcset="{% for img, width in combinedImages %}{{ img }} {{ width }}{{ widthDensity }}{% if not loop.last  %},{% endif %}{% endfor %}"
         src="{{ srcThumb }}"
         alt="{{ alt }}">
{% endif %}

{% if widthDensity == 'x' %}
<img srcset="{% for img in thumb %}{{ img }} {{ loop.index }}{{ widthDensity }}{% if not loop.last  %},{% endif %}{% endfor %}"
     src="{{ srcThumb }}"
     alt="{{ alt }}">
{% endif %}